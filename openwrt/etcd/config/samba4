config samba
        option workgroup 'WORKGROUP'
        option description 'Samba on OpenWrt'
        option charset 'UTF-8'
        option allow_legacy_protocols '1'
        option interface 'lan'

config sambashare
        option path '/mnt/nas'
        option name 'NAS'
        option timemachine '1'
        option create_mask '0666'
        option dir_mask '0777'
        option read_only 'no'
        option guest_ok 'yes'
        option public 'yes'

config sambashare
        option path '/mnt/secrets'
        option name 'secrets'
        option browsable 'no'
        option timemachine '1'
        option create_mask '0600'
        option dir_mask '0700'
        option read_only 'no'
        option guest_ok 'no'
        option public 'yes'
        option read_list = 'secret'

config sambashare
        option path '/mnt/registry'
        option name 'registry'
        option browsable 'no'
        option timemachine '1'
        option create_mask '0744'
        option dir_mask '0744'
        option read_only 'no'
        option guest_ok 'no'
        option public 'yes'
        option write_list = 'registry'

config sambashare
        option path '/mnt/etcd'
        option name 'etcd'
        option browsable 'no'
        option timemachine '1'
        option create_mask '0744'
        option dir_mask '0744'
        option read_only 'no'
        option guest_ok 'no'
        option public 'yes'
        option write_list = 'etcd'

config sambashare
        option path '/mnt/kuber'
        option name 'kuber'
        option browsable 'no'
        option timemachine '1'
        option create_mask '0744'
        option dir_mask '0744'
        option read_only 'no'
        option guest_ok 'no'
        option public 'yes'
        option write_list = 'kuber'

config sambashare
        option path '/mnt/swarm'
        option name 'swarm'
        option browsable 'no'
        option timemachine '1'
        option create_mask '0744'
        option dir_mask '0744'
        option read_only 'no'
        option guest_ok 'no'
        option public 'yes'
        option write_list = 'swarm'