   public static ArrayList<Integer> Processing(int[] innerMass){
        int zeroPosition = -1; // -1 потому, что ещё не встретили ни одного нуля
        ArrayList<Integer> resilt = new ArrayList<>(); // результирующий массив (в данном случае array потому, что в джаве размер массива должен быть предопределён
        int i = -1; //итератор потока
        for (int MassiveElement : innerMass) // обход массива потоком
        {
            i++; //итератор потока +1
            // если встречаем первый 0 то обновляем нулевую позицию
            if (MassiveElement==0&zeroPosition == -1){
                zeroPosition=0;

            }
            // если нуля во входном массиве ещё небыло
            if (zeroPosition == -1){
                resilt.add(i,i);
                // при каждом следующем элементе возвращаемся к началу результирующего массива увеличивая значения на 1
                // на самом деле это не верно, нужно при встрече первого нуля вернуться 1 раз и всё увеличить
                // а так это лишние проходы назад
                // но мне лень
                // во втором блоке этого недостатка кстати нет
                for (int ii=0;ii<=i;ii++){
                    resilt.set(ii,i-ii+1);
                }

            }else { // если 0 во входном массиве уже был
                zeroPosition++; // прибавляем к итератору нулевой позиции 1
                if (MassiveElement==0){ // если элемент входного массива 0

                    for (int ii=1;ii<=(zeroPosition/2);ii++){ // возвращаемся назад на половину итератора позиции нуля

                        resilt.set(i-ii,ii); // и меняем значения соответственно
                    }
                    zeroPosition=0; // сбрасываем итератор чтобы начать новый отсчёт
                    resilt.add(i,zeroPosition); // добавляем запись к позиции нуля как 0



                }else { // если элемент входного массива не 0 и 0 во входном массиве уже встречался то 
                    
                    resilt.add(i,zeroPosition); // пишем в результирующий массив итератор нуля

                }
            }
            
        }

        return resilt;
    }
